<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.eric.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleText="LJSearchBar"
        app:titleTheme="blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="如果需要对搜索栏进行设置。建议用iew，用法如下："
        android:textColor="@color/baseview_textcolor_main_black" />

    <TextView
        android:id="@+id/yiji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"
        android:text="Search_全局_基本"
        android:textColor="@android:color/white" />

    <com.eric.view.SearchBar
        android:id="@+id/search_bar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    </com.eric.view.SearchBar>


    <TextView
        android:id="@+id/erji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/black"
        android:text="Search_全局_输入提示"
        android:textColor="@android:color/white" />

    <com.eric.view.SearchBar
        android:id="@+id/search_bar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    </com.eric.view.SearchBar>

    <TextView
        android:id="@+id/erji3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/black"
        android:text="Search_全局_输入提示_左侧选择"
        android:textColor="@android:color/white" />

    <com.eric.view.SearchBar
        android:id="@+id/search_bar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    </com.eric.view.SearchBar>

</LinearLayout>