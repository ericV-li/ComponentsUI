<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical">

        <com.eric.view.TitleBar
            android:id="@+id/title_bar5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="LJTabView"
            app:titleTheme="blue" />

        <com.eric.view.TabView
            android:id="@+id/tab_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:tabViewStyle="styleSection"
            app:tabViewTheme="blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/lj_color_blue"
            android:gravity="center">

            <com.eric.view.TabHostTabView
                android:id="@+id/tab_host_tab_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabHostTabViewTheme="blue" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#f7f7f7"
            android:gravity="center">

            <com.eric.view.TabHostTabView
                android:id="@+id/tab_host_tab_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabHostTabViewTheme="white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#f7f7f7"
            android:gravity="center">

            <com.eric.view.TabHostTabView
                android:id="@+id/tab_host_tab_view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabHostTabViewTheme="white" />

        </LinearLayout>

        <com.eric.view.AverageTabView
            android:id="@+id/tab_view5"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            app:aTabIndicatorDividerType="aTabMatchParent" />

        <com.eric.view.AverageTabView
            android:id="@+id/tab_view6"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            app:aTabBackgroundColor="@color/lj_color_white"
            app:aTabIndicatorDividerColor="@color/lj_color_blue"
            app:aTabIndicatorDividerType="aTabMatchParent"
            app:aTabSelectTextColor="@color/lj_color_blue"
            app:aTabUnSelectTextColor="@color/lj_color_black_light" />


        <com.eric.view.TabView
            android:id="@+id/tab_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:tabViewStyle="styleSection"
            app:tabViewTheme="white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="选中 新闻咨询item"
            android:textColor="@android:color/white" />

        <com.eric.view.TabView
            android:id="@+id/tab_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabViewStyle="styleSwitch"
            app:tabViewTheme="blue" />

        <com.eric.view.TabView
            android:id="@+id/tab_view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:tabViewStyle="styleSwitch"
            app:tabViewTheme="white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_get_select_position"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/lj_color_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="获取当前选中的position"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_select_position"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/lj_color_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="代码选中第三条"
                android:textColor="@android:color/white" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>