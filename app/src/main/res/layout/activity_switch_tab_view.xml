<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.eric.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleText="LJSwitchTabView"
        app:titleTheme="blue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="如果需要对下拉栏进行设置。建议用SwitchTabView，用法如下："
        android:textColor="@color/baseview_textcolor_main_black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/black"
        android:text="显示下拉菜单"
        android:textColor="@android:color/white"/>

    <com.eric.view.SwitchTabView
        android:id="@+id/btn_switch_tab_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.eric.view.SwitchTabView>

    <com.eric.view.SwitchTabView
        android:id="@+id/btn_switch_tab_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

    </com.eric.view.SwitchTabView>

    <com.eric.view.SwitchTabView
        android:id="@+id/btn_switch_tab_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

    </com.eric.view.SwitchTabView>


</LinearLayout>