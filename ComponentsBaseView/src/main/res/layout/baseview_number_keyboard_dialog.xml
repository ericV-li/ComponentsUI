<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/lj_color_divider"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="8dp">

        <GridView
            android:id="@+id/grid_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="3"
            android:horizontalSpacing="4dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="4dp"
            />

        <LinearLayout
            android:id="@+id/lly_keyboard"
            android:layout_width="0dp"
            android:layout_height="200dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/img_board_delete"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_gravity="center"
                android:background="@drawable/baseview_shape_solid_white_corner4"
                android:scaleType="center"
                android:src="@drawable/baseview_keyboard_delete"/>

            <TextView
                android:id="@+id/txt_board_confirm"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/baseview_shape_solid_blue_corner4"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/lj_color_white"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
